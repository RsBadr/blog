{% extends 'base.html.twig' %}

{% block body %}


    <div class="well">
      <h3 style="text-align: center;">Éditeur d'article</h3>
      {{ form_start(edit_form) }}
        <div class="form-group">
            <label for="title">Titre </label>
            {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control' , 'placeholder':'Donnez un titre à votre article'} }) }}
        </div>
        <div class="form-group">
          <label for="content">Contenu</label>
          {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control input-sm' , 'placeholder':'Le corps de votre article', 'style':'height:300px'} }) }}
        </div>
        {{ form_widget(edit_form.save, { 'attr': {'class': 'btn btn-info', 'value':"Carriage&#13;&#10;return&#13;&#10;separators"} }) }}

      {{ form_end(edit_form) }}
    </div>
{% endblock %}
