{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
	  <div id="editProfilbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info">
				<div class="panel-heading">
						<div class="panel-title">Ã‰dition du profil</div>
				</div>
				<div class="panel-body" >
						<form id="editProfilform" class="form-horizontal" action="{{ path('fos_user_profile_edit') }}" method="post" role="form">
              <div class="form-group">
                  <label for="username" class="col-md-3 control-label">{{ 'form.username'|trans }}</label>
                  <div class="col-md-9">
                      {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                  </div>
              </div>
              <div class="form-group">
									<label for="email" class="col-md-3 control-label">{{ 'form.email'|trans }}</label>
									<div class="col-md-9">
											{{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
									</div>
							</div>
							<div class="form-group">
									<label for="firstname" class="col-md-3 control-label">{{ 'form.current_password'|trans }}</label>
									<div class="col-md-9">
											{{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
									</div>
							</div>
              <div style="margin-top:10px" class="form-group ">
                  <div class="col-sm-12 controls">
											<button id="btn-signup" type="submit" class="btn btn-success center-block">{{ 'profile.edit.submit'|trans }}</button>
									</div>
							</div>
              {{ form_rest(form) }}
						</form>
				</div>
			</div>
		</div>
</div>
